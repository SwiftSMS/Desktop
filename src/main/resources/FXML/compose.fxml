<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="org.swiftsms.desktop.controller.ComposeController">
    <center>
        <TextArea fx:id="uiMessage" promptText="Message..." wrapText="true" BorderPane.alignment="CENTER"/>
    </center>
    <right>
        <Button mnemonicParsing="false" onAction="#sendMessage" text="Send" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Button>
    </right>
</BorderPane>
